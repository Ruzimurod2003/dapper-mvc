@model User
 
@{
    ViewData["Title"] = "Новый пользователь";
}
<h2>@ViewData["Title"]</h2>
 
<form asp-action="Create" asp-controller="Home">
    <div>
        <div class="form-group">
            <label asp-for="FullName"></label>
            <input type="text" asp-for="FullName" class="form-control form-control-sm" />
        </div>
        <div class="form-group">
            <label asp-for="Age"></label>
            <input asp-for="Age" class="form-control  form-control-sm" />
        </div>
        <div class="form-group">
            <label asp-for="Email"></label>
            <input asp-for="Email" class="form-control  form-control-sm" />
        </div>
        <div class="form-group">
            <input type="submit" value="Сохранить" class="btn btn-success" />
        </div>
    </div>
</form>
 
<div>
    <a class="btn btn-primary" asp-controller="Home" asp-action="Index">Вернуться к списку</a>
</div>