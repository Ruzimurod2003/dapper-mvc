@model IEnumerable<User>
@{
    ViewData["Title"] = "Список пользователей";
}
<h2>@ViewData["Title"]</h2>
<p>
    <a class="btn btn-success" asp-controller="Home" asp-action="Create">Добавить</a>
</p>
<p>
    Число всех пользователей - @ViewData["Count"]
    <br>
    @ViewBag.FullTime
</p>

<table class="table">
    <tr>
        <th>№</th>
        <th>Ф.И.О</th>
        <th>Возраст</th>
        <th>Электронная почта</th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>            
            <td>@item.Id</td>
            <td>@item.FullName</td>
            <td>@item.Age</td>
            <td>@item.Email</td>
            <td>
                <a class="btn btn-info" asp-controller="Home" asp-action="Edit" asp-route-id="@item.Id">Изменить</a> 
                <a class="btn btn-danger" asp-controller="Home" asp-action="Delete" asp-route-id="@item.Id">Удалить</a>
            </td>
        </tr>
    }
</table>